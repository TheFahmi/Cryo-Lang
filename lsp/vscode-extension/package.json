{
    "name": "argon-lang",
    "displayName": "Argon Language",
    "description": "Full language support for Argon programming language - autocomplete, go to definition, formatting",
    "version": "2.0.0",
    "publisher": "argon-lang",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters",
        "Snippets"
    ],
    "keywords": [
        "argon",
        "programming language",
        "systems programming"
    ],
    "activationEvents": [
        "onLanguage:argon"
    ],
    "main": "./extension.js",
    "contributes": {
        "languages": [
            {
                "id": "argon",
                "aliases": [
                    "Argon",
                    "argon"
                ],
                "extensions": [
                    ".ar"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "argon",
                "scopeName": "source.argon",
                "path": "./syntaxes/argon.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "argon",
                "path": "./snippets/argon.json"
            }
        ]
    },
    "dependencies": {
        "vscode-languageclient": "^8.0.0"
    }
}