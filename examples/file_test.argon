fn main() {
    // Test writeFile
    let content = "Hello from Argon File I/O!";
    writeFile("test_output.txt", content);
    print("File written successfully!");
    
    // Test fileExists
    if (fileExists("test_output.txt")) {
        print("File exists: true");
    }
    
    // Test readFile
    let read_content = readFile("test_output.txt");
    print("Read content:");
    print(read_content);
    
    // Test appendFile
    appendFile("test_output.txt", "\nAppended line!");
    
    // Read again
    let final_content = readFile("test_output.txt");
    print("Final content:");
    print(final_content);
    
    // Self-read: read our own source code!
    print("--- Reading our own source code ---");
    let source = readFile("file_test.argon");
    print("Source length:");
    print(len(source));
}
